@model LoginModel

<div class="row">
    <div class="col-sm-4 offset-4">
        <form method="post">
            <div class="mb-3 text-center text-secondary">
                <i class="fa-solid fa-right-to-bracket fa-6x"></i>
            </div>

            <div class="text-danger small mb-3" asp-validation-summary="ModelOnly"></div>

            <div class="form-floating mb-3">
                <input type="text" placeholder="username" class="form-control" asp-for="Username" />
                <label asp-for="Username"></label>
                <span class="text-danger small" asp-validation-for="Username"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" placeholder="password" class="form-control" asp-for="Password" />
                <label asp-for="Password"></label>
                <span class="text-danger small" asp-validation-for="Password"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-right-to-bracket me-2"></i>Login
                </button>
            </div>
        </form>
    </div>
</div>