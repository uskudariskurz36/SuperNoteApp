@using MFramework.Services.FakeData
@using SuperNoteApp.Entities;
@model List<Note>


<div class="row mb-3">
    <div class="col">
        <h1 class="display-4 border-bottom">My Notes</h1>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus-circle me-2"></i>Add New Note
        </a>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class="table table-sm table-striped table-hover table-bordered text-center">
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Is Draft</th>
                    <th>Creadted Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Note n in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" class="btn btn-info btn-sm text-white">
                                <i class="fa fa-edit me-2"></i>Edit
                            </a>
                            <a asp-action="Delete" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash me-2"></i>Delete
                            </a>
                        </td>
                        <td>@n.Id</td>
                        <td>@n.Title</td>
                        <td>@n.Description</td>
                        <td>
                            @if (n.IsDraft)
                            {
                                <i class="fa fa-check-circle text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td>@n.CreatedDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>